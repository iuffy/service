{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "globals": {
    "__DEV__": true,
    "__PROD__": true,
    "env": true
  },
  "env": {
    "es6": true,
    "node": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "rules": {
    "no-confusing-arrow": 0,
    "no-plusplus": 0,
    "semi": [2, "never"],
    "global-require": 0,
    "no-param-reassign": ["error", { "props": false }],
    "object-property-newline": 0,"no-mixed-operators": [
        "error",
        {
            "groups": [
                ["*", "/", "%", "**"],
                ["&", "|", "^", "~", "<<", ">>", ">>>"],
                ["==", "!=", "===", "!==", ">", ">=", "<", "<="],
                ["&&", "||"],
                ["in", "instanceof"]
            ],
            "allowSamePrecedence": true
        }
    ],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.test.js"]}],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^ignore"
      }
    ],
    "no-bitwise": ["error", { "int32Hint": true }],
    "no-prototype-builtins": 0,
    "no-restricted-syntax": 0,
    "no-nested-ternary": 0,
    "react/forbid-prop-types": 0,
    "react/sort-comp": [1, {
      "order": [
        "static-methods",
        "lifecycle",
        "/^initialize.+$/",
        "/^load.+$/",
        "/^reset.+$/",
        "/^handle.+$/",
        "everything-else",
        "rendering"
      ],
      "groups": {
        "rendering": [
          "/^render.+$/",
          "render"
        ]
      }
    }]
  }
}
